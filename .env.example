# ============================================
# Lions Event Management Hub - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# --------------------------------------------
# Application Configuration
# --------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development
NODE_ENV=development

# --------------------------------------------
# Database Configuration (PostgreSQL)
# --------------------------------------------
# For Prisma ORM - uses connection pooling
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/lions_hub_dev?schema=public&pgbouncer=true"

# For Prisma migrations - direct connection (no pooling)
DIRECT_URL="postgresql://postgres:postgres@localhost:5432/lions_hub_dev?schema=public"

# --------------------------------------------
# Authentication (Clerk)
# --------------------------------------------
# Get your keys from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Clerk webhook secret for secure webhook verification
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Clerk URLs (optional, uses defaults if not set)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# --------------------------------------------
# Object Storage (Cloudflare R2 / MinIO)
# --------------------------------------------
# Cloudflare R2 (Production)
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=lions-hub-production
R2_PUBLIC_URL=https://your-r2-public-url.r2.dev

# MinIO (Local Development - use these for local development)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=lions-hub-dev
MINIO_USE_SSL=false

# Storage mode: 'r2' for production, 'minio' for local development
STORAGE_MODE=minio

# --------------------------------------------
# Email Configuration
# --------------------------------------------
# SMTP Settings (for MailHog in development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_SECURE=false

# Brevo (formerly Sendinblue) API Key (for production)
# Get your key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your_brevo_api_key_here

# Email sender configuration
EMAIL_FROM=noreply@lions-hub.example.com
EMAIL_FROM_NAME=Lions Event Management Hub

# Email mode: 'smtp' for development, 'brevo' for production
EMAIL_MODE=smtp

# --------------------------------------------
# Redis (Caching)
# --------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# --------------------------------------------
# Feature Flags
# --------------------------------------------
# Enable/disable major features (true/false)
FEATURE_EVENTS=true
FEATURE_MEMBERS=true
FEATURE_PROTOCOLS=true
FEATURE_GALLERY=true
FEATURE_DONATIONS=true

# --------------------------------------------
# Analytics & Monitoring (Optional)
# --------------------------------------------
# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# --------------------------------------------
# Development Tools
# --------------------------------------------
# Prisma Studio
PRISMA_STUDIO_PORT=5555

# Enable detailed logging in development
DEBUG=false
LOG_LEVEL=info
